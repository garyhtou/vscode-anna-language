{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ANNA",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#immediates"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.anna",
					"match": "\\b(add|sub|and|or|not|shf|lli|lui|lw|sw|beq|bne|bgt|bge|blt|ble|addi|jalr|in|out)\\b"
				}
			]
		},
		"labels": {
			"patterns": [
				{
					"match": "(&)([a-zA-Z0-9_]+)($|\\s*)",
					"name": "entity.name.type.anna"
				},
				{
					"match": "(^|\\s)*([a-zA-Z0-9_]+)(:)\\s*$",
					"name": "invalid.illegal"
				},
				{
					"match": "(^|\\s*)([a-zA-Z0-9_]+)(:)",
					"name": "entity.name.type.anna"
				}
			]
		},
		"comments": {
			"name": "comment.line.number-sign.anna",
			"match": "#.*$"
		},
		"directives": {
			"patterns": [
				{
					"name": "keyword.control.less",
					"match": "(.\\b(halt|fill)\\b)"
				}
			]
		},
		"registers": {
			"match": "(r[0-7])(\\S|$)?",
			"captures": {
				"1": {
					"name": "support.variable.anna"
				}
			}
		},
		"immediates": {
			"patterns": [
				{
					"name": "constant.numeric.anna",
					"match": "0x[a-fA-F0-9]+"
				},
				{
					"name": "invalid.illegal",
					"match": "0x"
				},
				{
					"name": "constant.numeric.anna",
					"match": "\\d+"
				}
			]
		}
	},
	"scopeName": "source.anna"
}
