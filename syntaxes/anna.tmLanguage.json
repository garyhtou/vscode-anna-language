{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ANNA",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#labels"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.anna",
				"match": "\\b(add|addi|sub|bez|bgz|lli|lui|in|out|sw|lw)\\b"
			}]
		},
		"labels": {
			"name": "entity.name.selector",
			"match": "(&)(.+)($|\\s)",
			"captures": {
				"1": {
					"name": "markup.punctuation.label.anna"
				},
				"2": {
					"name": "entity.name.selector.anna"
				}
			}
		},
		"comments": {
			"name": "comment.line.number-sign.anna",
			"match": "#.*$"
		},
		"directive": {
			"patterns": [{
				"name": "meta.preprocessor.anna",
				"match": "\\b(.halt|.fill)\\b"
			}]
		}
	},
	"scopeName": "source.anna"
}